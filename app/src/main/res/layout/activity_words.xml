<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleDark"
    android:gravity="center"
    android:orientation="vertical">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/activity_words_SwipeFlingAdapterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:max_visible="4"
        app:min_adapter_stack="6"
        app:rotation_degrees="16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_word_microphone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_microphone" />

        <Button
            android:id="@+id/activity_word_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:drawableLeft="@drawable/ic_add"
            android:drawableRight="@drawable/ic_text_format_black"/>

    </LinearLayout>


</FrameLayout>
