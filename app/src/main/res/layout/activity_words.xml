<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleDark"
    android:gravity="center"
    android:orientation="vertical">

    <com.lismoi.lis_moiapprendrelire.cardsStack.SwingFlingAdapterView
        android:id="@+id/activity_words_SwipeFlingAdapterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_word_microphone_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_microphone" />

        <Button
            android:id="@+id/activity_word_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_text_format_black"
            android:drawableStart="@drawable/ic_add"
            android:paddingHorizontal="20dp" />

    </LinearLayout>

</FrameLayout>
